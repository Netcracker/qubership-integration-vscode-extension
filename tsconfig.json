{
  "compilerOptions": {
    "module": "Node16",
    "moduleResolution": "node16",
    "declaration": true,
    "target": "ES2020",
    "outDir": "dist",
    "lib": [
      "ES2020",
      "WebWorker"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "strict": true,
    "paths": {
      "@netcracker/qip-schemas": [
        "./node_modules/@netcracker/qip-schemas",
        "./node_modules/@netcracker/qip-ui/node_modules/@netcracker/qip-schemas"
      ],
      "@netcracker/qip-schemas/*": [
        "./node_modules/@netcracker/qip-schemas/*",
        "./node_modules/@netcracker/qip-ui/node_modules/@netcracker/qip-schemas/*"
      ]
    }
  }
}
